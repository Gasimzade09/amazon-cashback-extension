{
  "manifest_version": 3,
  "name": "Amazon Cashback Extension",
  "version": "1.0",
  "description": "Tracks Amazon links and adds affiliate cashback",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://www.amazon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Amazon Cashback Extension"
  }
}
