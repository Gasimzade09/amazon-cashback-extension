{
  "manifest_version": 3,
  "name": "Amazon Cashback Extension",
  "version": "1.0",
  "description": "Automatically highlights best prices and tracks cashback on Amazon.",
  "permissions": ["tabs", "storage", "scripting", "webRequest", "webRequestBlocking"],
  "host_permissions": ["https://www.amazon.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*/dp/*"],
      "js": ["content.js"]
    }
  ]
}