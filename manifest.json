{
  "manifest_version": 3,
  "name": "Amazon Tag Adder",
  "version": "1.0",
  "description": "Добавляет tag в URL Amazon, если его нет",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://www.amazon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
