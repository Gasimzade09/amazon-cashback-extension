{
  "manifest_version": 2,
  "name": "Amazon Cashback Extension",
  "version": "1.0",
  "description": "Tracks Amazon links and adds affiliate cashback",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://www.amazon.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
