{
  "manifest_version": 3,
  "name": "Amazon Cashback Extension",
  "version": "1.0",
  "description": "Automatically adds Amazon affiliate ID to links",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "*://www.amazon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Amazon Cashback Active"
  }
}
